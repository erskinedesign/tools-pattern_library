<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pattern Library</title>
    {{> theme}}
    {{> prism}}

    <style>
        .modifiers ul {
            display: none;
        }

        .modifiers ul[class*="{{slug}}"] { display: block}

    </style>
</head>
<body class="{{slug}}">

    <div class="navigation">
        <div class="gutter">
            <div class="group {{#if_group ''}}is-active{{/if_group}}">
                <a href="/{{site.root}}">Home</a>
            </div>
            {{#each site.groups}}
            <div class="group {{#if_name ../group}}is-active{{/if_name}}">
                <span>{{name}}</span>
                <ul>
                    {{#each pages}}
                        <li>
                            <a class="{{#if_path ../../path}}is-active{{/if_path}}" href="/{{path}}">{{heading}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="gutter">
        {{#each sections}}
            <div class="section">
                {{#if comment}}
                    <div class="comment">{{{comment}}}</div>
                {{/if}}

                {{#if result}}
                    <div class="result">
                        <iframe id="iframe_{{{id}}}" height="0" src="about:blank"></iframe>
                        <script id="script_{{{id}}}">
                            var iframe  = document.getElementById('iframe_{{{id}}}');
                            var context = iframe.contentWindow.document;
                            var script  = document.getElementById('script_{{{id}}}');
                            context.open();
                            context.write('<!doctype html>'
                                +'<html>'
                                +'    <head>'
                                +'        {{> assets}}'
                                +'    </head>'
                                +'    <body>'
                                +'        {{{result}}}'
                                +'        {{heading}}'
                                +'    </body>'
                                +'</html>');
                            context.close();
                            script.parentNode.removeChild(script);
                        </script>
                    </div>
                {{/if}}
                {{#if source}}
                    <div class="source language-markup">{{{source}}}</div>
                {{/if}}
            </div>
        {{/each}}
    </div><!-- .gutter -->

    <div class="modifiers">
        <h1>Modifiers</h1>

        {{#each site.tree.children}}
            {{#each children}}
                {{#if children }}
                    {{#each children}}
                        {{#if children}}
                            <ul class="_{{name}}">
                                {{#each children}}
                                    <li>
                                        <a href="/{{path}}">
                                            {{name}}
                                        </a>
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    {{/each}}
                {{/if}}
            {{/each}}
        {{/each}}

    </div>


    <script>
        // Resize all iframes to exactly fit content within
        window.onload = function() {
            var iframes = document.querySelectorAll('iframe');
            for ( var i = 0; i < iframes.length; i++ ){
                iframes[i].height = iframes[i].contentWindow.document.body.clientHeight;
            }
        };
    </script>

</body>
</html>